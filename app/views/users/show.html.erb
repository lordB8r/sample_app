<table class="profile" summary="Profile info">
    <tr>
        <td class="main">
            <h1>
                <%#= gravatar_for @user %><%# Commented out b/c gravatar_image_tag ain't working in rails 4%>
                <%= @user.name %>
            </h1>
        </td>
        <td class="sidebar round">
            <strong>Name</strong> <%= @user.name %></br>
            <strong>URL</strong> <%= link_to user_path(@user), @user %></br>
        </td>
    </tr>
</table>

